<Window x:Class="Lab4.Window2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab4"
        mc:Ignorable="d"
        Title="Window2" Height="450" Width="800">
    <Grid>
        <Button Content="Приховати" VerticalAlignment="Top" Margin="50,50,50,0" Click="Hide"/>
        <Button Content="Показати" VerticalAlignment="Top" Margin="50,120,50,0" Click="Show"/>
        <Button Content="Очистити" VerticalAlignment="Top" Margin="50,180,50,0" Click="Clear"/>
        <TextBox Name="Input" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0,0,0,150" Width="90" Height="20"/>
    </Grid>
</Window>
